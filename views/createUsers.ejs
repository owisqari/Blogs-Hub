    .box {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      margin: 64px;
      padding: 32px;
      font-size: 32px;
    }
    .box span {
      margin: 10px;
    }
    .box h1 {
color: white;    }
