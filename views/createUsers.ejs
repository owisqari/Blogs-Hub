  <body>
    <div class="h-25">
      <div class="box">
        <h1 style="font-size: 80px">Car Warehouse</h1>
        <span>
          <i class="fa-solid fa-angles-down fa-fade fa-2xl"></i>
        </span>
      </div>
    </div>

    <div class="h-50 d-flex align-items-center justify-content-center">
      <form action="/createUsers" method="post">
        <div class="input-group input-group-lg">
          <div class="input-group mb-3">
            <span class="input-group-text"><i class="fa-solid fa-car-side fa-xs"></i></span>
            <input
              name="title"
              type="text"
              class="form-control"
              placeholder="Blog Title"
              required
            />
            <span class="input-group-text"><i class="fa-solid fa-car fa-xs"></i></span>
            <textarea name="model" type="text"
            class="form-control"
            placeholder="Blog"
            required cols="30" rows="10"></textarea>
          </div>
          <div class="input-group mt-4 d-flex justify-content-center">
            <input class="btn btn-primary" style="width: 8rem" type="submit"></input>
          </div>
        </div>
      </form>
    </div>

    <div class="d-flex flex-wrap align-items-center justify-content-center mr-3">
        <% for(x of blog) { %>
          <div
            class="card text-bg-light mb-lg-3 card shadow-lg p-3 mb-5 bg-body rounded m-lg-auto "
            style="width: 32rem"
          >
          <div class="card-body text-center m-lg-2">
            <h5 class="card-title"><%= x.title%></h5>
            <a href="/blogDetail/<%=x._id%>" class="link-primary">show details</a>
            <a href="/blogUpdate/<%=x._id%>"  class="link-success">Update</a>
            <a href="/blogDelete/<%=x._id%>" class="link-danger">delete</a>
          </div>
        </div>
        <% } %>
    </div>
    <!-- BOOTSTRAP -->
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
